<p id="notice"><%= notice %></p>

<h1>Packages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Days</th>
      <th>Nights</th>
      <th>Amount</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class ="row">
    <% @packages.each do |package| %>
        
          <div class="card col s12 l3 m12">
              <div class="card-image waves-effect waves-block waves-light">
                <div class="activator"><%= image_tag package.image.url %></div>
              </div>
              <div class="card-content">
                <span class="card-title activator grey-text text-darken-4"><%= package.name %><i class="material-icons right">more_vert</i></span>
                <p><a href="#">This is a link</a></p>
              </div>
              <div class="card-reveal">
                <span class="card-title grey-text text-darken-4"><%= package.name %><i class="material-icons right">close</i></span>
                <%= package.description %>
              </div>
          </div>

    <% end %>
            </div>
  </tbody>
</table>

<br>

<%= link_to 'New Package', new_package_path %>
