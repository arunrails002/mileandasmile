<p id="notice"><%= notice %></p>

<h1>Packages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Days</th>
      <th>Nights</th>
      <th>Amount</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class ="row">
    <% @packages.each do |package| %>
        
        <div class="col s12 m7 l3">
          <div class="card">
            <div class="card-image thumb">
              <%= image_tag package.image.url %>
              <span class="card-title">Card Title</span>
            </div>
            <div class="card-content">
              <p>I am a very simple card. I am good at containing small bits of information.
              I am convenient because I require little markup to use effectively.</p>
            </div>
            <div class="card-action">
              <%= link_to 'Show', package %>
              <%= link_to 'Edit', edit_package_path(package) %>
              <%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        </div>

    <% end %>
            </div>
  </tbody>
</table>

<br>

<%= link_to 'New Package', new_package_path %>
