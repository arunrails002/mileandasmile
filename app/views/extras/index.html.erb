<h1>Extras</h1>

<table>
  <thead>
    <tr>
      <th>Mission</th>
      <th>Vision</th>
      <th>Ourteam</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @extras.each do |extra| %>
      <tr>
        <td><%= extra.mission %></td>
        <td><%= extra.vision %></td>
        <td><%= extra.ourteam %></td>
        <td><%= link_to 'Show', extra %></td>
        <td><%= link_to 'Edit', edit_extra_path(extra) %></td>
        <td><%= link_to 'Destroy', extra, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

