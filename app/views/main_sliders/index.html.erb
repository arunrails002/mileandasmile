
  <div class="row">
        <div class="col s12 m12 l6">
      <div class="card z-depth-5">

      <div class="carousel carousel-slider center">
        <% @main_sliders.each do |main_slider| %>
        <div class="carousel-fixed-item center">
          <!-- <a class="btn waves-effect purple grey-text darken-text-2">button</a> -->
        </div>
        <div class="carousel-item  red-text" href="#one!">
          <%= image_tag main_slider.image.url %>
        </div>
        <div class="carousel-item  red-text" href="#two!">
          <%= image_tag main_slider.image_1.url %>
        </div>
        <div class="carousel-item  red-text" href="#three!">
         <%= image_tag main_slider.image_2.url %>
        </div>
        <% end %>
      </div>

      </div>
        </div>
        <div class="col s12 m12 l6">
            <div class="card darken-4 bg-image-1">
              <div class="card-content" style="padding: 109px;">
                <span class="card-title font-weight-400 mb-10">Macbook Pro</span>
                  <p>Let us plan your travel in
                  <br> few steps</p>
                  <div class="border-non mt-5">
                  <a class="waves-effect waves-light btn red border-round box-shadow">Go</a>
                </div>
              </div>
            </div>
        </div>
  </div>

  <script>
$('.carousel.carousel-slider').carousel({
    fullWidth: true,
    indicators: true
  });
autoplay()   
function autoplay() {
    $('.carousel').carousel('next');
    setTimeout(autoplay, 4500);
}
</script>